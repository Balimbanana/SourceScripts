if EXIST "F:\Steam\steamapps\common\Halo The Master Chief Collection\halo1\original\build" set "mccdir=F:\Steam\steamapps\common\Halo The Master Chief Collection\halo1\original\build"
if EXIST "G:\Steam\steamapps\common\Halo The Master Chief Collection\halo1\original\build" set "mccdir=G:\Steam\steamapps\common\Halo The Master Chief Collection\halo1\original\build"
