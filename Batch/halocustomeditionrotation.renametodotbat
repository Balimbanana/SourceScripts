if EXIST "C:\Program Files\Steam\steamapps\common\Halo The Master Chief Collection\halo1\original\build" set "mccdir=C:\Program Files\Steam\steamapps\common\Halo The Master Chief Collection\halo1\original\build"
if EXIST "E:\Program Files\Steam\steamapps\common\Halo The Master Chief Collection\halo1\original\build" set "mccdir=E:\Program Files\Steam\steamapps\common\Halo The Master Chief Collection\halo1\original\build"
if EXIST "D:\Program Files\Steam\steamapps\common\Halo The Master Chief Collection\halo1\original\build" set "mccdir=D:\Program Files\Steam\steamapps\common\Halo The Master Chief Collection\halo1\original\build"
